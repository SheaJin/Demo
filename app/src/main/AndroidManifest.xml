<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qingxu.demoapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.NO" />

    <application
        android:name=".ui.base.LemonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.recycler.RecyclerActivity" />
        <activity android:name=".ui.rx.RxActivity" />
        <activity android:name=".ui.databinding.DataBindingActivity" />
        <activity android:name=".ui.databinding.DataFragmentActivity" />
        <activity android:name=".ui.rank.RankActivity" />
        <activity android:name=".ui.login.RegisterActivity" />
        <activity android:name=".ui.pic.ImpressPicActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.pic.UploadImageActivity" />
        <activity android:name=".ui.rank.CoordinatorActivity" />
        <activity android:name=".ui.service.ServiceActivity" />
        <activity android:name=".ui.main.HomeActivity" />

        <service android:name=".ui.service.MyService" />

        <meta-data
            android:name="design_width"
            android:value="1242" />
        <meta-data
            android:name="design_height"
            android:value="2208" />

        <activity android:name=".ui.fragment.NewsFragment" />
        <activity android:name=".ui.fragment.MineFragment" />
        <activity android:name=".ui.fragment.CommunityFragment" />
        <activity android:name=".ui.fragment.InfoFragment"></activity>
    </application>

</manifest>