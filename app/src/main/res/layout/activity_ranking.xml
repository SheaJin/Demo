<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/custom_title_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="615px">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="60px"
                            android:layout_marginRight="60px">
                            <!--一-->
                            <RelativeLayout
                                android:id="@+id/view_first"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="60px"
                                android:layout_marginTop="102px">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/first_image"
                                    android:layout_width="300px"
                                    android:layout_height="300px"
                                    android:layout_marginTop="18px"
                                    android:src="@color/white_255" />

                                <ImageView
                                    android:layout_width="126px"
                                    android:layout_height="114px"
                                    android:layout_marginBottom="10px"
                                    android:src="@mipmap/big_one_icon" />
                            </RelativeLayout>

                            <!--二-->
                            <RelativeLayout
                                android:id="@+id/view_second"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="60px"
                                android:layout_marginRight="120px"
                                android:layout_marginTop="222px"
                                android:layout_toLeftOf="@+id/view_first">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/second_image"
                                    android:layout_width="180px"
                                    android:layout_height="180px"
                                    android:layout_marginTop="18px"
                                    android:src="@color/white_255" />

                                <ImageView
                                    android:layout_width="90px"
                                    android:layout_height="81px"
                                    android:layout_marginBottom="10px"
                                    android:src="@mipmap/second_icon" />
                            </RelativeLayout>

                            <!--三-->
                            <RelativeLayout
                                android:id="@+id/view_third"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="60px"
                                android:layout_marginLeft="120px"
                                android:layout_marginTop="222px"
                                android:layout_toRightOf="@+id/view_first">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/third_image"
                                    android:layout_width="180px"
                                    android:layout_height="180px"
                                    android:layout_marginTop="18px"
                                    android:src="@color/white_255" />

                                <ImageView
                                    android:layout_width="80px"
                                    android:layout_height="91px"
                                    android:layout_marginBottom="10px"
                                    android:src="@mipmap/third_icon" />
                            </RelativeLayout>

                            <!--文字-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/view_first"
                                android:layout_marginBottom="60px"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_second"
                                    android:layout_width="380px"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:ellipsize="end"
                                    android:gravity="center_horizontal"
                                    android:singleLine="true"
                                    android:text="用户名"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/text_first"
                                    android:layout_width="301px"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/text_second"
                                    android:layout_marginRight="20px"
                                    android:layout_toLeftOf="@+id/text_second"
                                    android:ellipsize="end"
                                    android:gravity="center_horizontal"
                                    android:singleLine="true"
                                    android:text="用户名"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/text_third"
                                    android:layout_width="301px"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/text_second"
                                    android:layout_marginLeft="20px"
                                    android:layout_toRightOf="@+id/text_second"
                                    android:ellipsize="end"
                                    android:gravity="center_horizontal"
                                    android:singleLine="true"
                                    android:text="用户名"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="60px"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="60px"
                        app:cardCornerRadius="45px"
                        app:cardElevation="0px"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60px">

                                <RadioGroup
                                    android:id="@+id/group"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="231px"
                                    android:layout_marginRight="231px"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_today"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="40px"
                                        android:background="@null"
                                        android:button="@null"
                                        android:checked="true"
                                        android:text="今日排行榜"
                                        android:textColor="@color/homepage_color"
                                        android:textSize="16sp" />

                                    <RadioButton
                                        android:id="@+id/rb_yesterday"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="40px"
                                        android:background="@null"
                                        android:button="@null"
                                        android:text="昨日排行榜"
                                        android:textColor="@color/homepage_color"
                                        android:textSize="16sp" />

                                </RadioGroup>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignLeft="@+id/group"
                                    android:layout_alignRight="@+id/group"
                                    android:layout_below="@+id/group"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="30px"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <View
                                        android:id="@+id/view_today"
                                        android:layout_width="wrap_content"
                                        android:layout_height="1dp"
                                        android:layout_marginRight="40px"
                                        android:layout_weight="1"
                                        android:background="@color/black_255"
                                        android:textColor="@color/homepage_color"
                                        android:visibility="visible" />

                                    <View
                                        android:id="@+id/view_yesterday"
                                        android:layout_width="wrap_content"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="40px"
                                        android:background="@color/black_255"
                                        android:textColor="@color/homepage_color"
                                        android:visibility="invisible" />
                                </LinearLayout>

                            </RelativeLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <!--底部-->
        <LinearLayout
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="240px"
            android:layout_alignParentBottom="true"
            android:background="@color/drawbrilliant"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="66px"
                    android:text="1932"
                    android:textColor="@color/white_255"
                    android:textSize="18sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="240px"
                    android:src="@color/line" />

                <TextView
                    android:layout_width="240px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="390px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="用户名"
                    android:textColor="@color/white_255" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="720px"
                    android:maxLength="5"
                    android:text="98"
                    android:textColor="@color/white_255"
                    android:textSize="18sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="240px"
                    android:layout_height="120px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="84px"
                    app:cardCornerRadius="50px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="分享排名"
                        android:textColor="@color/drawbrilliant" />
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
