<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="30dp">

                <RadioGroup
                    android:id="@+id/group"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_login"
                        android:text="登录"
                        android:button="@null"
                        android:checked="true"
                        android:background="@null"
                        android:textSize="24sp"
                        android:padding="20px"
                        android:textColor="@color/white_255"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#66ffffff" />

                    <RadioButton
                        android:id="@+id/rb_register"
                        android:text="注册"
                        android:button="@null"
                        android:background="@null"
                        android:textColor="@color/white_255"
                        android:textSize="18sp"
                        android:padding="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="手机号"
                    android:textColor="@color/white_255"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:paddingBottom="6dp"
                    android:maxLength="11"
                    android:paddingTop="6dp"
                    android:textColor="@color/white_255"
                    android:textColorHint="#66ffffff"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#66ffffff" />

                <TextView
                    android:text="验证码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white_255"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/view_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@null"
                        android:hint="请输验证码"
                        android:inputType="number"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:textColor="@color/white_255"
                        android:textColorHint="#66ffffff"
                        android:maxLength="6"
                        android:text="@={model.checkCode}"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_code"
                        android:onClick="@{onclick}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:ems="6"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:text="获取"
                        android:textColor="@color/white_255"
                        android:textSize="14sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/view_psd"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:textColor="@color/white_255"
                        android:maxLength="20"
                        android:textColorHint="#66ffffff"
                        android:text="@={model.password}"
                        android:textSize="18sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#66ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_mail"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="邮箱"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white_255"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:background="@null"
                        android:hint="请输入邮箱"
                        android:inputType="textPassword"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:textColor="@color/white_255"
                        android:maxLength="20"
                        android:textColorHint="#66ffffff"
                        android:text="@={model.password}"
                        android:textSize="18sp"/>
                </LinearLayout>

                <!--<TextView-->
                    <!--android:onClick="@{onclick}"-->
                    <!--android:id="@+id/bt_forget_pw"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:text="忘记密码？"-->
                    <!--android:textColor="#66ffffff" />-->

                <Button
                    android:onClick="click"
                    android:id="@+id/bt_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="登录"
                    android:textColor="@color/white_255"
                    android:textSize="18sp" />

            </LinearLayout>


        </ScrollView>

        <TextView
            android:onClick="@{onclick}"
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="还没注册？马上注册"
            android:textColor="@color/white_255"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>