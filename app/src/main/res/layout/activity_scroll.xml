<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xy.doll.scroll.ScrollActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_450"
                android:background="@color/black_30" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv"
                android:src="@mipmap/play" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv1"
                android:scaleType="centerCrop"
                android:src="@mipmap/splash" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv2"
                android:src="@mipmap/play" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv3"
                android:text="数据的死敌阿苏会受到还不是u都不会说别的"
                android:textSize="50sp" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="132px"
        android:background="@color/theme"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_btn" />

        <TextView
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_back"
            android:text=""
            android:textColor="@color/white_255"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/titlessssss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white_255"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:text=""
            android:textColor="@color/white_255"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="VS"
        android:textSize="80px" />

    <RelativeLayout
        android:alpha="0"
        android:id="@+id/view_left"
        android:layout_width="765px"
        android:layout_height="920px"
        android:layout_marginTop="337px"
        android:background="@mipmap/yellow" />

    <RelativeLayout
        android:alpha="0"
        android:id="@+id/view_right"
        android:layout_width="691px"
        android:layout_height="955px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="576px"
        android:background="@mipmap/purple" />
    
    <ImageView
        android:alpha="0"
        android:layout_marginTop="680px"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ppz_vs"
        android:id="@+id/image"
        android:layout_width="480px"
        android:layout_height="500px" />


    <LinearLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="30px"
            android:background="@drawable/drawable_white_point"
            android:id="@+id/point1"
            android:layout_width="60px"
            android:layout_height="60px" />

        <ImageView
            android:layout_margin="30px"
            android:background="@drawable/drawable_white_point"
            android:id="@+id/point2"
            android:layout_width="60px"
            android:layout_height="60px" />

        <ImageView
            android:layout_margin="30px"
            android:background="@drawable/drawable_white_point"
            android:id="@+id/point3"
            android:layout_width="60px"
            android:layout_height="60px" />
    </LinearLayout>
</RelativeLayout>
