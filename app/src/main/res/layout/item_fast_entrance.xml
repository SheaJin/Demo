<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/px_258"
        android:layout_height="@dimen/px_190"
        android:orientation="vertical">

        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/giftbox_btn_blue"
            android:id="@+id/iv_fast"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_120"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/px_10"
            android:layout_marginTop="@dimen/px_9"
            android:text="2333"
            android:textColor="@color/homepage_color"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
