<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/popup_window">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <android.support.v7.widget.CardView
                android:layout_width="1002px"
                android:layout_height="1200px"
                android:layout_margin="42px"
                app:cardBackgroundColor="@color/white_255"
                app:cardCornerRadius="45px"
                app:cardElevation="0px">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="354px"
                        android:layout_width="312px"
                        android:layout_height="252px" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/window_cancel"
                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@mipmap/window_cancel" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>