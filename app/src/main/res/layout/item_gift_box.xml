<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white_255"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/px_1122"
        android:layout_height="@dimen/px_420"
        app:cardCornerRadius="@dimen/px_45"
        app:cardElevation="0px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="@dimen/px_60"
                android:layout_height="@dimen/px_60"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_30"
                android:background="@drawable/drawable_check" />

            <android.support.v7.widget.CardView
                android:id="@+id/view_status"
                app:cardBackgroundColor="@color/white_255"
                android:layout_width="@dimen/px_300"
                android:layout_height="@dimen/px_300"
                android:layout_marginBottom="@dimen/px_60"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_60"
                android:layout_marginTop="@dimen/px_60"
                app:cardCornerRadius="@dimen/px_45"
                app:cardElevation="0px">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_doll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_60"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_toLeftOf="@+id/view_diamond"
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_42" />

                    <RelativeLayout
                        android:id="@+id/view_diamond"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_42" />

                        <ImageView
                            android:id="@+id/iv_diamond"
                            android:layout_width="@dimen/px_60"
                            android:layout_height="@dimen/px_60"
                            android:layout_toRightOf="@+id/tv_price"
                            android:layout_marginLeft="@dimen/px_15"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/diamond_icon" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_catch_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_60"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_size_36" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_size_36" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>